{
  "name": "electron-quick-start-typescript",
  "version": "1.0.0",
  "main": "dist-ts/main.js",
  "email": "dalong@qq.com",
  "description": "A minimal Electron application written with Typescript",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "all:packager": "npm run build && npm run packager && npm run dmg",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "dmg": "electron-installer-dmg  --overwrite ./electron-quick-start-typescript-darwin-x64 rongfengliang",
    "packager": "electron-packager --overwrite --protocol=rongfengliang  --protocol-name=rongfengliang .",
    "start": "npm run build && electron ./dist/main.js",
    "builder": "electron-builder",
    "all:builder": "npm run build && npm run builder"
  },
  "build": {
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "maintainer":"dalong@qq.com",
      "target": [
        "deb",
        "rpm",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "msi",
        "zip"
      ]
    }
  },
  "repository": "https://github.com/electron/electron-quick-start-typescript",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo",
    "typescript"
  ],
  "author": "GitHub",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^7.1.7",
    "electron-builder": "^21.2.0",
    "electron-builder-squirrel-windows": "^22.2.0",
    "electron-installer-dmg": "^3.0.0",
    "electron-packager": "^14.1.1",
    "tslint": "^5.19.0",
    "typescript": "^3.6.0"
  }
}
